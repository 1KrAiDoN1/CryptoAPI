{
    "swagger": "2.0",
    "info": {
        "description": "API server for Crypto Market",
        "title": "Crypto Market API",
        "contact": {
            "url": "https://t.me/KrAiDoN",
            "email": "pavelvasilev24843@gmail.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/crypto/{id}": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Shows detailed information page for specified cryptocurrency",
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "Crypto"
                ],
                "summary": "Get cryptocurrency details",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Cryptocurrency ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "default": "access_token=your_token_here",
                        "description": "Access token",
                        "name": "Cookie",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "HTML page with cryptocurrency details"
                    },
                    "302": {
                        "description": "Redirect to login if not authenticated"
                    },
                    "400": {
                        "description": "Bad Request - Missing cryptocurrency ID",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Not Found - Cryptocurrency not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/home": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Fetches cryptocurrency market data and displays it along with authenticated user's email (if available)",
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "Crypto"
                ],
                "summary": "Get cryptocurrency data and user info",
                "parameters": [
                    {
                        "type": "string",
                        "default": "access_token=your_token_here",
                        "description": "Access token",
                        "name": "Cookie",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "HTML page with crypto data",
                        "schema": {
                            "$ref": "#/definitions/handler.DataInfo"
                        }
                    },
                    "401": {
                        "description": "Unauthorized (though page will still render without user data)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Invalidates user session by clearing authentication cookies and removing refresh token",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout user",
                "parameters": [
                    {
                        "type": "string",
                        "default": "refresh_token=your_token_here",
                        "description": "Refresh token",
                        "name": "Cookie",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "303": {
                        "description": "Redirect to login page"
                    },
                    "401": {
                        "description": "Unauthorized - No valid session",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/personal_account": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Retrieves authenticated user's profile information including email, registration time and favorite cryptocurrencies",
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Get personal account data",
                "parameters": [
                    {
                        "type": "string",
                        "default": "access_token=your_token_here",
                        "description": "Access token",
                        "name": "Cookie",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "HTML page with user data",
                        "schema": {
                            "$ref": "#/definitions/handler.DataUser"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Missing or invalid token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "504": {
                        "description": "Gateway Timeout - Data loading timeout",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "Creates new user account with email and password",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Register new user",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User email",
                        "name": "email",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "User password",
                        "name": "password",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "303": {
                        "description": "Redirect to home page on success"
                    },
                    "400": {
                        "description": "Bad Request - Missing email or password",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/saveFavoriteCrypto/{crypto_name}": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Saves specified cryptocurrency to authenticated user's favorites list",
                "tags": [
                    "User"
                ],
                "summary": "Add favorite cryptocurrency",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Cryptocurrency ID or symbol",
                        "name": "crypto_name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "303": {
                        "description": "Redirect to personal account page"
                    },
                    "400": {
                        "description": "Bad Request - Missing cryptocurrency ID",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - User not authenticated",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/verification": {
            "post": {
                "description": "Verifies user credentials and issues access/refresh tokens",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "User authentication",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User email",
                        "name": "email",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "User password",
                        "name": "password",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sets access_token and refresh_token cookies",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "303": {
                        "description": "Redirect to /home on success"
                    },
                    "401": {
                        "description": "Unauthorized - Invalid credentials",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.DataInfo": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "output": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.CoinStruct"
                    }
                }
            }
        },
        "handler.DataUser": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "favoriteCrypto": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.CoinStruct"
                    }
                },
                "timeOfRegistration": {
                    "type": "string"
                }
            }
        },
        "models.CoinStruct": {
            "type": "object",
            "properties": {
                "changePercent24Hr": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "marketCapUsd": {
                    "type": "string"
                },
                "maxSupply": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "priceUsd": {
                    "type": "string"
                },
                "rank": {
                    "type": "string"
                },
                "supply": {
                    "type": "string"
                },
                "symbol": {
                    "type": "string"
                },
                "volumeUsd24Hr": {
                    "type": "string"
                },
                "vwap24Hr": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "description": "JWT token in cookie",
            "type": "apiKey",
            "name": "access_token",
            "in": "cookie"
        },
        "RefreshToken": {
            "description": "Refresh token in cookie",
            "type": "apiKey",
            "name": "refresh_token",
            "in": "cookie"
        }
    }
}